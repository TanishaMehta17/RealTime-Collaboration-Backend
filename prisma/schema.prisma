generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl     = env("DIRECT_URL")
  relationMode = "prisma"
}

model User {
  id         String  @id @default(cuid())
  username   String
  email      String  @unique
  password   String
  confirmpas String

}

model Team {
  id       String  @id @default(cuid())
  name     String  @unique
  password String
  manager  String
  members  String[]
}

model Task {
  id          String  @id @default(cuid())
  title       String
  description String
  type        String[]
  status      String
  teamId      String
  date       DateTime @default(now())
  membersName     String[]
}